        <parallax:ParallaxView x:Name="MainParallax" BodyMargin="0,300,0,0" HeaderScrollSpeed="4">
            <parallax:ParallaxView.HeaderContent>
                <ContentView HorizontalOptions="FillAndExpand" VerticalOptions="Start" HeightRequest="300" BackgroundColor="Blue">
                    <Image x:Name="Image" Source="{Binding Event.PhotoUri}" Margin="0" Aspect="Fill" VerticalOptions="FillAndExpand"/>
                </ContentView>
            </parallax:ParallaxView.HeaderContent>
            <parallax:ParallaxView.BodyContent>
                <ContentView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="White" HeightRequest="1300">
                    <ContentView.Margin>
                        <!-- need to add specific margin to  Windows to show header.-->
                        <OnPlatform x:TypeArguments="Thickness" WinPhone="0,210,0,0"/>
                    </ContentView.Margin>
                    <Frame Padding="0" VerticalOptions="Start" Margin="0,-50,0,0">
                        <StackLayout Spacing="20">
                            <Label Text="{Binding Event.Title}" FontSize="Large"/>
                            <Label Text="{Binding Event.Text}" FontSize="Small"/>
                            <Label Text="{Binding Event.StartDate}" FontSize="Medium"/>
                        </StackLayout>
                    </Frame>
                </ContentView>
            </parallax:ParallaxView.BodyContent>
        </parallax:ParallaxView>
    </ContentPage.Content>
</ContentPage>